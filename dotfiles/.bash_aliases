# Shortcuts
alias c='clear'
alias h='history'
alias ..='cd ..'

# Listing improvements
alias ls='ls --color=auto'
alias la='ls -A'
alias ll='ls -alFh'

# Git shortcuts
alias gs='git status'
alias ga='git add'
alias gc='git commit'

alias df='df -h' # Human-readable disk usage

# EXPORT
export EDITOR=nvim
